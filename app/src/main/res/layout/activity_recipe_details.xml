<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeDetailActivity">

    <LinearLayout
        android:id="@+id/contentlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:id="@+id/imageIv"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_food"
            app:c_border="true"
            app:c_border_color="@color/gray"
            app:c_border_width="1dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="2">

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_span="3"
                    android:text="Recipe Details"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    tools:ignore="RtlCompat" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:padding="5dp"
                    android:text="Recipe Title"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/titleTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:padding="5dp"
                    android:text="Recipe Title" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:padding="5dp"
                    android:text="Recipe Type"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/typeTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:padding="5dp"
                    android:text="Recipe Type" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:padding="5dp"
                    android:text="Date Added"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/addedTimeTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:padding="5dp"
                    android:text="Date Added" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:padding="5dp"
                    android:text="Date Updated"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/updatedTimeTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:padding="5dp"
                    android:text="Date Updated" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_span="3"
                    android:text="Recipe Ingredients"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/ingredientTv"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="top"
                    android:layout_span="3"
                    android:overScrollMode="ifContentScrolls"
                    android:scrollbars="vertical"
                    android:background="@drawable/edit_text_border"
                    android:padding="5dp"
                    android:text="Recipe Ingredient" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_span="3"
                    android:text="Recipe Step"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    tools:ignore="RtlCompat" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/stepTv"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="top"
                    android:layout_span="3"
                    android:overScrollMode="ifContentScrolls"
                    android:scrollbars="vertical"
                    android:background="@drawable/edit_text_border"
                    android:padding="5dp"
                    android:text="Recipe Step" />


            </TableRow>

        </TableLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/deletebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/ic_delete" />

</RelativeLayout>